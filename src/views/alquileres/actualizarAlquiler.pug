extends ../layout 

block content 
    h1 Editar Alquiler 

    form(action=`/alquileres/${alquiler.alquiler_id}/actualizar`, method='POST')
        div.form-group 
            label(for='alquiler_id') ID Alquiler: 
            input(type="number", name='alquiler_id' value=alquiler.alquiler_id, required=true, class='form-control')

        div.form-group 
            label(for='usuario_id') ID Usuario: 
            input(type="number", name='usuario_id' value=alquiler.usuario_id, required=true, class='form-control')
        
        div.form-group 
            label(for='bicicleta_id') ID Bicicleta: 
            input(type="number", name='bicicleta_id' value=alquiler.bicicleta_id, required=true, class='form-control')
        
        div.form-group 
            label(for='recogida_id') ID Recogida: 
            input(type="number", name='recogida_id' value=alquiler.recogida_id, required=true, class='form-control')
        
        div.form-group 
            label(for='entrega_id') ID Entrega: 
            input(type="number", name='entrega_id' value=alquiler.entrega_id, required=true, class='form-control') 
        
        div.form-group 
            label(for='fecha_inicio') Fecha inicio: 
            input(type="date", name='fecha_inicio' value=alquiler.fecha_inicio, required=true, class='form-control')
        
        div.form-group 
            label(for='fecha_fin') Fecha fin: 
            input(type="date", name='fecha_fin' value=alquiler.fecha_fin, required=true, class='form-control')
        
        div.form-group 
            label(for='duracion') Duracion: 
            input(type="number", name='duracion' value=alquiler.duracion, required=true, class='form-control') 
        
        div.form-group 
            label(for='costo') Costo: 
            input(type="number", name='costo' value=alquiler.costo, required=true, class='form-control')
        
        div.form-group 
            button(type='submit', class='btn btn-primary') Guardar Cambios
        
        
        
        