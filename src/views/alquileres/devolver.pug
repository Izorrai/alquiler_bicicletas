extends ../layout

block content
  .max-w-2xl.mx-auto
    h1.text-3xl.font-bold.mb-6 Devolver Bicicleta
    
    if !alquiler
      .bg-yellow-100.border-l-4.border-yellow-500.text-yellow-700.p-4.mb-6
        p No se encontró el alquiler especificado
    else
      .bg-white.shadow.rounded.p-6
        .grid.grid-cols-2.gap-6.mb-6
          .space-y-2
            p.text-gray-600 ID Alquiler
            p.font-bold= alquiler.alquiler_id
          
          .space-y-2
            p.text-gray-600 Estado
            p.font-bold= alquiler.estado
          
          .space-y-2
            p.text-gray-600 Fecha Inicio
            p.font-bold= new Date(alquiler.fecha_inicio).toLocaleString()
          
          .space-y-2
            p.text-gray-600 Duración
            p.font-bold= `${alquiler.duracion || 0} horas`
        
        form#formDevolucion.space-y-6(action="/alquileres/devolver" method="POST")
          input(type="hidden" name="alquiler_id" value=alquiler.alquiler_id)
          input(type="hidden" name="bicicleta_id" value=alquiler.bicicleta_id)
          
          .mb-4
            label.block.text-gray-700.font-bold.mb-2(for="entrega_id") 
              | Ubicación de Entrega
            select#entrega_id.w-full.px-3.py-2.border.rounded(
              name="entrega_id"
              required
            )
              option(value="") Seleccione ubicación de entrega
              each ubicacion in ubicaciones
                option(value=ubicacion.id)= ubicacion.nombre_estacion
          
          .flex.justify-end.space-x-4
            a.px-6.py-2.border.rounded(
              href="/alquileres/mostrar"
            ) Cancelar
            button.px-6.py-2.bg-blue-600.text-white.rounded(
              type="submit"
            ) Confirmar Devolución
