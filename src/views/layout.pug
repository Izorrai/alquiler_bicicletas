        link(rel="stylesheet", href="/css/facturas.css")
        link(rel="stylesheet", href="/css/disponibilidad.css")
        link(rel="stylesheet", href="/css/alquileresActivos.css")
        link(rel="stylesheet", href="/css/devolucionCorrecta.css")
